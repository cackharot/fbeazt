{
  "compilerOptions": {
    "outDir": "dist/app",
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false
  },
  "filesGlob": [
    "app/**/*.ts",
    "typings/**/*.d.ts",
    "node_modules/immutable/dist/immutable.d.ts"
  ],
  "atom": {
    "rewriteTsconfig": true
  },
  "files":[
    "app/**/*.ts",
    "typings/**/*.ts"
  ]
}
